@model IEnumerable<LeonardoLimaPontes.Models.Categoria>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Categoria</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Categoria" asp-action="Create" class="btn btn-primary">
                Criar Nova Categoria
            </a>
        </div>
    </div>

    <br />
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nome da Categoria
                    </th>
                    <th>
                        Ordem Visual
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Nome</td>
                        <td width="30%">@obj.OrdemVisual</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Categoria" asp-route-Id="@obj.Id" asp-action="Editar" class="btn btn-primary mx-2">
                                    Editar
                                </a>
                                <a asp-controller="Categoria" asp-route-Id="@obj.Id" asp-action="Deletar" class="btn btn-danger">
                                    Deletar 
                                </a>
                            </div> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Não existem categorias.</p>
    }
</div> 